<project name="namics-hybris-tasks-iis" basedir=".">

	<!--
		=================================
		macro: restartIisService
		=================================
	-->
	<macrodef name="restartIisService">
		<sequential>
			<exec dir="./scripts" executable="cmd.exe">
				<arg value="/c" />
				<arg value="iisreset.exe" />
			</exec>
		</sequential>
	</macrodef>


