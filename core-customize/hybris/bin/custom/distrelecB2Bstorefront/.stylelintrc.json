{
    "syntax": "scss",
    "plugins": [
        "stylelint-order"
    ],
    "rules": {
        "order/order": [
            "custom-properties",
            "declarations"
        ],
        "order/properties-alphabetical-order": true,
        "block-no-empty": true,
        "property-no-unknown": true,
        "max-empty-lines": 1,
        "declaration-block-no-duplicate-properties": true
    }
}