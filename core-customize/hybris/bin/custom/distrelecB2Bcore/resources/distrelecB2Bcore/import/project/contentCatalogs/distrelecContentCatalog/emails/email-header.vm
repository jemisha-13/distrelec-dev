## messageSource=classpath:/distrelecB2Bcore/messages/$site/email-header_$lang.properties

<style>
	table {
		table-layout: fixed;
	}
</style>

## WRAPPER
<table border="0" width="100%" height="100%" cellpadding="0" cellspacing="0" bgcolor="#ffffff" style="margin-top: 20px; border-spacing: 0;">
	<tr>
		<td align="center" valign="top">

			## HEADER
			<table border="0" width="602" cellpadding="0" cellspacing="0" style=" text-align:left; border-bottom: 1px solid #cccccc;table-layout:fixed;">
				<tr>
					<td height="5" width="469" bgcolor="#333333" style="border-spacing: 0;border-top: 1px solid #cccccc; border-left: 1px solid #cccccc;"></td>
					<td height="5" bgcolor="#AA1936"style="border-spacing: 0; border-top: 1px solid #cccccc;  border-right: 1px solid #cccccc;"></td>
				</tr>
				<tr>
					## Logo
					<td height="66" style="border-spacing: 0; padding-top:0; padding-left: 20px; border-left: 1px solid #cccccc; border-right: 1px solid #cccccc;">
						<table width="319" height="60">
							<tr>
								<td width="319" height="60">
									<a style="color: #ffffff;width:319px;height:60px;" href="${ctx.messages.shopUrl}">${ctx.cmsSlotContents.Logo}</a>
								</td>
							</tr>
						</table>
					</td>
					## Social
					<td style="border-spacing: 0; padding-top: 6px; border-right: 1px solid #cccccc;">
						<table>
							<tr>

								<td style="padding-left: 16px;">
									#if(${ctx.messages.socialYoutubeUrl} && ${ctx.messages.socialYoutubeUrl} != '')
										<a style="color: #ffffff;" href="${ctx.messages.socialYoutubeUrl}">${ctx.cmsSlotContents.SocialImageYoutube}</a>
									#end
								</td>
								<td style="padding-left: 0px;">
									#if(${ctx.messages.socialFacebookUrl} && ${ctx.messages.socialFacebookUrl} != '')
										<a style="color: #ffffff;" href="${ctx.messages.socialFacebookUrl}">${ctx.cmsSlotContents.SocialImageFacebook}</a>
									#end
								</td>
							</tr>
						</table>
					</td>
				</tr>
			</table>