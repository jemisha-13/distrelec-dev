## messageSource=classpath:/distrelecB2Bcore/messages/$site/email-footer_$lang.properties
			## FOOTER
			<table border="0" width="602" cellpadding="0" cellspacing="0" style="border-spacing: 0; text-align:left; ">
				<tr>
					<td style="border-collapse: collapse; padding: 50px; background-color:#2D2D2D;">
						<table border="0" width="100%" cellpadding="0" cellspacing="0" style="border-spacing: 0;">
							<tr>
								<td valign="top" style="border-collapse: collapse;">
									<p style="color: #fff; font-size: 12px; line-height: 1.5; text-align: center; padding-bottom: 5px">${ctx.messages.address}.</p>
									#if (!${ctx.messages.orderContactDataTel.empty} && !${ctx.messages.orderContactDataTelLabel.empty})
									<p style="color: #fff; font-size: 12px; line-height: 1.5; text-align: center; padding-bottom: 5px">${ctx.messages.orderContactDataTelLabel} ${ctx.messages.orderContactDataTel}</p>
									#end
									#if (${ctx.messages.orderContactDataFax} && !${ctx.messages.orderContactDataFax.empty})
										<p style="color: #fff; font-size: 12px; line-height: 1.5; text-align: center; padding-bottom: 5px">${ctx.messages.orderContactDataFaxLabel} ${ctx.messages.orderContactDataFax}</p>
									#end
									<p style="color: #fff; font-size: 12px; line-height: 1.5; text-align: center; padding-bottom: 5px">${ctx.messages.orderContactDataEmailLabel} ${ctx.messages.orderContactDataEmail}</p>
									<p style="color: #fff; font-size: 12px; line-height: 1.5; text-align: center; padding-bottom: 5px">${ctx.messages.orderContactDataWebsiteLabel} ${ctx.baseUrl}</p>

									#if (!${ctx.messages.disclaimerText.empty})
										<p style="color: #fff; font-size: 12px; line-height: 1.5; text-align: left; padding-bottom: 5px">${ctx.messages.disclaimerText}</p>
									#end
								</td>
							</tr>
						</table>
					</td>
				</tr>
			</table>
		</td>
	</tr>
</table>
