#set($StringEscapeUtils=${ctx.StringEscapeUtils})
<html>
	<head>
		<meta charset="UTF-8">
	</head>
	<body style="padding: 0; margin: 0; font-family: Verdana, Arial, sans-serif; font-size: 14px; color: #333333; background-color: #ffffff; -webkit-text-size-adjust: none; -ms-text-size-adjust: none;">
		<table border="0" width="602" cellpadding="0" cellspacing="0" style="border-spacing: 0; text-align:left;">
			<tr>
				<td style="border-collapse: collapse; border-right: 1px solid #cccccc; border: 1px solid #cccccc; padding: 20px;">
					<table border="0" cellpadding="0" cellspacing="0" style="border-spacing: 0;">
						<tr>
							<td colspan="2">
								<p style="font-family: Verdana, Arial, sans-serif; color: #333333; font-size: 12px; line-height: 18px;">
									The following order was created from the notify request on $!StringEscapeUtils.escapeHtml(${ctx.notifyTime})
								</p>
							</td>
						</tr>
						<!-- Keep an empty line -->
						<tr>	
							<td colspan="2">&nbsp;</td>
						</tr>
						<tr>
							<td><p style="font-family: Verdana, Arial, sans-serif; color: #333333; font-size: 12px; line-height: 18px;">User Name:</p></td>
							<td><p style="font-family: Verdana, Arial, sans-serif; color: #333333; font-size: 12px; line-height: 18px; padding-left: 20px;">$!StringEscapeUtils.escapeHtml(${ctx.userUID})</p></td>
						</tr>
						<tr>
							<td><p style="font-family: Verdana, Arial, sans-serif; color: #333333; font-size: 12px; line-height: 18px;">Email address:</p></td>
							<td><p style="font-family: Verdana, Arial, sans-serif; color: #333333; font-size: 12px; line-height: 18px; padding-left: 20px;">$!StringEscapeUtils.escapeHtml(${ctx.userEmail})</p></td>
						</tr>
						<tr>
							<td><p style="font-family: Verdana, Arial, sans-serif; color: #333333; font-size: 12px; line-height: 18px;">Customer Type:</p></td>
							<td><p style="font-family: Verdana, Arial, sans-serif; color: #333333; font-size: 12px; line-height: 18px; padding-left: 20px;">$!StringEscapeUtils.escapeHtml(${ctx.customerType})</p></td>
						</tr>
						<tr>
							<td><p style="font-family: Verdana, Arial, sans-serif; color: #333333; font-size: 12px; line-height: 18px;">Cart Nr.:</p></td>
							<td><p style="font-family: Verdana, Arial, sans-serif; color: #333333; font-size: 12px; line-height: 18px; padding-left: 20px;">$!StringEscapeUtils.escapeHtml(${ctx.cartNumber})</p></td>
						</tr>
						<tr>
							<td><p style="font-family: Verdana, Arial, sans-serif; color: #333333; font-size: 12px; line-height: 18px;">ERP Order Nr.:</p></td>
							<td><p style="font-family: Verdana, Arial, sans-serif; color: #333333; font-size: 12px; line-height: 18px; padding-left: 20px;">$!StringEscapeUtils.escapeHtml(${ctx.erpOrderNumber})</p></td>
						</tr>
						<tr>
							<td colspan="2">&nbsp;</td>
						</tr>
					</table>
				</td>
			</tr>
		</table>
	</body>
</html>
