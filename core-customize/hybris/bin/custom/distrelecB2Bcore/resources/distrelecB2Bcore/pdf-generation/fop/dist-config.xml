<fop version="2.2">
    <strict-validation>false</strict-validation>
    <renderers>
        <renderer mime="application/pdf">
            <fonts>
                <font kerning="yes" embed-url="font/OpenSans-Regular.ttf" embedding-mode="subset">
                    <font-triplet name="OpenSans" style="normal" weight="normal"/>
                </font>
                <font kerning="yes" embed-url="font/OpenSans-Bold.ttf" embedding-mode="subset">
                    <font-triplet name="OpenSans" style="normal" weight="bold"/>
                </font>
                <font kerning="yes" embed-url="font/OpenSans-Italic.ttf" embedding-mode="subset">
                    <font-triplet name="OpenSans" style="italic" weight="normal"/>
                </font>
            </fonts>
        </renderer>
    </renderers>
</fop>