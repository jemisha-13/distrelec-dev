<?xml version="1.0" encoding="UTF-8"?>
<fop version="1.0">
    <renderers>
        <renderer mime="application/pdf">
            <fonts>
                <!-- Add font configurations here if necessary -->
            </fonts>
            <native type="org.apache.fop.render.pdf.PDFRendererNative">
                <supports-transparency>true</supports-transparency>
            </native>
        </renderer>
    </renderers>
    <strict-configuration>true</strict-configuration>
    <strict-validation>true</strict-validation>
    <image-preloader resolver="org.apache.fop.image.loader.batik.PreloaderSVG" mime="image/svg+xml"/>
</fop>
