<div sclass="yw-listview-pagingcontainer pagination-items">
	<label id="numberOfItemsLabel" sclass="number-of-items-label" visible="false"/>
	<paging id="paging" visible="false"/>
	<combobox id="numberOfItemsPerPageSelect" zclass="z-paging-select" width="auto" style="width: auto; margin-left: 0;" autodrop="true" onClick="self.open()">
		<template name="model">
			<comboitem label="${each}" width="auto"/>
		</template>
	</combobox>
	<label style="margin-right: 0;" sclass="items-per-page-label">${labels.pagesize.itemsperpage}</label>
</div>